class Solution {
    public int countGoodSubstrings(String s) {
        int c=0;
        for(int i=0;i<s.length()-2;i++){
        HashSet<Character> hs=new HashSet<>();
            for(int j=i;j<=i+2;j++){
                hs.add(s.charAt(j));
                if(hs.size()==3){
                    c=c+1;
             }
            }
            }
        return c;
    }
}
