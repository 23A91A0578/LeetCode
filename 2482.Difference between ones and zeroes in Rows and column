class Solution {
    public int[][] onesMinusZeros(int[][] grid) {
        int[] onesrow=new int[grid.length];
        int[] onescol=new int[grid[0].length];
        int[] zeroesrow=new int[grid.length];
        int[] zeroescol=new int[grid[0].length];
        int[][] diff=new int[grid.length][grid[0].length];
        Arrays.fill(onesrow,0);
        Arrays.fill(onescol,0);
        Arrays.fill(zeroesrow,0);
        Arrays.fill(zeroescol,0);

        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[i].length;j++){
                if(grid[i][j]==0){
                    zeroesrow[i]++;
                    zeroescol[j]++;
                }
                onesrow[i]+=grid[i][j];
                onescol[j]+=grid[i][j];
            }
        }
        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[i].length;j++){
                diff[i][j]=onesrow[i]+onescol[j]-zeroesrow[i]-zeroescol[j];
            }
        }
        return diff;
    }
}
