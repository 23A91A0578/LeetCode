class Solution {
    public int minPairSum(int[] nums) {
        Arrays.sort(nums);
        int n=nums.length;
        int l=0;
        int r=n-1;
        int res=0;
        while(l<r){
            res=Math.max(res,nums[l]+nums[r]);
            l++;
            r--;
        }
        return res;
    }
}
