class Solution {
    public int minimumLength(String s) {
        int freq[] = new int[26];
        for (char c : s.toCharArray()) {
            freq[c - 'a']++;

        }
        int minLength = 0;
        for (int count : freq) {
            if (count == 0) continue;
            minLength += (count >= 3) ? (count % 2 == 0 ? 2 : 1) : count;
        }

        return minLength;
    }
}
