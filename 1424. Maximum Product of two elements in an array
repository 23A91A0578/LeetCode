import java.util.Arrays;
import java.util.Collections;
class Solution {
    public int maxProduct(int[] nums) {
       Arrays.sort(nums);
       for(int i=0;i<nums.length/2;i++){
        int temp=nums[i];
        nums[i]=nums[nums.length-1-i];
        nums[nums.length-1-i]=temp;
       }
      return  (nums[0]-1)*(nums[1]-1); 
    }
}
